Algoritmo "Exercici5"

Var
// Seção de Declarações das variáveis
   n1 : real
   oQueE : real
Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 
   escreval ("DIGITE UM NUMERO: ")
   leia (n1)
   
   oQueE <- n1 % 2
   
   se oQueE = 0.0 entao
     escreval ("Esse é um numero par")
   senao
     escreval ("Esse é um numero impar")
   FimSe
   
Fimalgoritmo